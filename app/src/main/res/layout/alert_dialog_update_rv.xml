<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/llfName">

        <TextView
            android:id="@+id/fName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:layout_weight="1"
            android:textColor="#35407A"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Name: " />

        <TextView
            android:id="@+id/fName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/llNum">

        <TextView
            android:id="@+id/Num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:layout_weight="1"
            android:textColor="#35407A"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Phone Number: " />

        <TextView
            android:id="@+id/Num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/llType">

        <TextView
            android:id="@+id/Type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:layout_weight="1"
            android:textColor="#35407A"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Type of Crime: " />

        <TextView
            android:id="@+id/Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/llDatee">

        <TextView
            android:id="@+id/Tarikh1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:layout_weight="1"
            android:textColor="#35407A"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Date: " />

        <TextView
            android:id="@+id/Tarikh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/llMasa">

        <TextView
            android:id="@+id/Masa1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:layout_weight="1"
            android:textColor="#35407A"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Time: " />

        <TextView
            android:id="@+id/Masa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/llStationn">

        <TextView
            android:id="@+id/Station1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="#35407A"
            android:textStyle="bold"
            android:text="Station: " />

        <TextView
            android:id="@+id/Station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/llDescription">

        <TextView
            android:id="@+id/Desc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="Description: "
            android:textColor="#35407A"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/Desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="370dp"
            android:layout_height="match_parent"
            android:gravity="center|end"
            android:textSize="18sp"
            android:text="Status: "
            android:textColor="#35407A"
            android:textStyle="bold"/>

        <RadioGroup
                android:id="@+id/rgStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <RadioButton
                    android:id="@+id/rbOTW"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="On the way"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/rbPending"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Pending"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/rbUnavailable"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Unavailable"
                    android:textSize="18sp" />
            </RadioGroup>
    </LinearLayout>

    <TextView
            android:id="@+id/tvAssign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Security Guard : "
            android:textAlignment="center"
            android:textColor="#35407A"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerGuard"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="@drawable/style_spinner"
            android:contentDescription="Choose security guard"
            android:minHeight="48dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Update"
        android:background="@android:color/holo_blue_dark"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:id="@+id/buttonUpd"
        android:textSize="20dp"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/buttonCan"
        android:background="@android:color/holo_red_dark"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:textSize="20dp"/>


</LinearLayout>